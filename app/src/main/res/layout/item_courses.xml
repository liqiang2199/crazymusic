                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color333333"
                android:text="@string/app_name"
                android:textSize="@dimen/text_14"
                android:paddingTop="@dimen/gap_15"
                android:paddingBottom="@dimen/gap_15"/>

            <com.music.view.myImageView xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_head_me"
                android:layout_width="@dimen/gap_45"
                android:layout_height="@dimen/gap_45"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_pic"
                imagecontrol:border_inside_color="@color/white"
                imagecontrol:border_outside_color="@color/white"
                imagecontrol:border_thickness="2dp" />

        </RelativeLayout>



    </LinearLayout>
