                app:sriv_left_top_corner_radius="@dimen/gap_10"
                app:sriv_right_bottom_corner_radius="@dimen/gap_10"
                app:sriv_right_top_corner_radius="@dimen/gap_10"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_30"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gap_30"
                    android:alpha="0.4"
                    android:background="@drawable/loan_record_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />

            </RelativeLayout>


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
