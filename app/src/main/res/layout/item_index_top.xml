    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/bt_live"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/ic_zhibo"
                android:paddingTop="@dimen/gap_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="@dimen/gap_5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/ic_shipin"
                android:paddingTop="@dimen/gap_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="@dimen/gap_5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_online"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@mipmap/ic_xianxiayuw"
                android:paddingTop="@dimen/gap_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/relevant_information"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="@dimen/gap_5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_music"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
