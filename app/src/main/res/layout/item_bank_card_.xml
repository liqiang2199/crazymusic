<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:paddingTop="@dimen/gap_10"
        android:layout_marginLeft="@dimen/gap_10"
        android:layout_marginRight="@dimen/gap_10">

        <ImageView
            android:id="@+id/iv_bank_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@mipmap/bg_guangda"/>

        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="@dimen/gap_50"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_10"
            android:adjustViewBounds="true"
            android:src="@mipmap/ico_jianshe"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginTop="@dimen/gap_10"
            android:paddingBottom="@dimen/gap_10"
            android:layout_toRightOf="@id/iv_bank_logo">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:text="@string/app_name"/>
             <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_16"
                 android:text="@string/bank_type"/>
              <TextView
                android:id="@+id/tv_bank_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_16"
                  android:text="@string/app_name"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
