<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/coordinatorLayout_Style"
    app:statusBarBackground="@drawable/bg_base_bar">

    <include layout="@layout/base_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gap_48"
            android:layout_centerVertical="true"
            android:text="@string/account_bind"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_14"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorCommonLine" />

        <RelativeLayout
            android:id="@+id/ralt_bind_qq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_48"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/qq_bind"
                android:textColor="@color/color333333"
                android:textSize="16sp"
                android:drawableLeft="@mipmap/qq"
                android:gravity="center"
                android:drawablePadding="@dimen/gap_5"/>

            <TextView
                android:id="@+id/tv_version_update"
                android:layout_width="@dimen/gap_90"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/bind"
                android:textColor="@color/color333333"
                android:textSize="16sp"
                android:padding="@dimen/gap_5"
                android:gravity="center"
                android:background="@drawable/account_bind_backgroud_hui"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorCommonLine" />
        <RelativeLayout
            android:id="@+id/ralt_bind_weiChat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_48"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/weiChat_bind"
                android:textColor="@color/color333333"
                android:textSize="16sp"
                android:drawableLeft="@mipmap/icon_bind_weichat"
                android:gravity="center"
                android:drawablePadding="@dimen/gap_5"/>

            <TextView
                android:layout_width="@dimen/gap_90"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/NoBind"
                android:textColor="@color/blue_bar_cen"
                android:textSize="16sp"
                android:padding="@dimen/gap_5"
                android:gravity="center"
                android:background="@drawable/account_bind_backgroud_hui"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorCommonLine" />
        <RelativeLayout
            android:id="@+id/ralt_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_48"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/phone_bind_unBind"
                android:textColor="@color/color333333"
                android:textSize="16sp"
                android:drawableLeft="@mipmap/icon_bind_phone"
                android:gravity="center"
                android:drawablePadding="@dimen/gap_5"/>

            <TextView
                android:layout_width="@dimen/gap_90"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/NoBind"
                android:textColor="@color/blue_bar_cen"
                android:textSize="16sp"
                android:padding="@dimen/gap_5"
                android:gravity="center"
                android:background="@drawable/account_bind_backgroud_hui"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>