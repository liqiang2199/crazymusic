<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_48"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/gap_70"
            android:layout_height="1dp"
            android:background="@color/color999999">

        </LinearLayout>

        <TextView
            android:id="@+id/text_shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot_class"
            android:textSize="@dimen/text_14"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/gap_10"
            android:paddingRight="@dimen/gap_10"/>
        <LinearLayout
            android:layout_width="@dimen/gap_70"
            android:layout_height="1dp"
            android:background="@color/color999999">

        </LinearLayout>

    </LinearLayout>

    <com.framework.view.XGridViewForScrollView
        android:id="@+id/girdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:scrollbars="none" />
</LinearLayout>