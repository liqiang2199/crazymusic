<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/coordinatorLayout_Style"
    app:statusBarBackground="@drawable/bg_base_bar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/mFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp" />

        <FrameLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_52"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_sy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_home"
                    android:gravity="top|center_horizontal"
                    android:onClick="onClick"
                    android:paddingTop="5dp"
                    android:text="@string/home"
                    android:textColor="@color/color00BEE7"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tab_lg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_legou1"
                    android:gravity="top|center_horizontal"
                    android:onClick="onClick"
                    android:paddingTop="5dp"
                    android:text="@string/happy_buy"
                    android:textColor="@color/color666666"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:text=""
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tab_sq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_shequ1"
                    android:gravity="top|center_horizontal"
                    android:onClick="onClick"
                    android:paddingTop="5dp"
                    android:text="@string/community"
                    android:textColor="@color/color666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tab_wd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/ic_wode1"
                    android:gravity="top|center_horizontal"
                    android:onClick="onClick"
                    android:paddingTop="5dp"
                    android:text="@string/my"
                    android:textColor="@color/color666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tab_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_ripple"
                android:onClick="onClick"
                android:src="@mipmap/tab_dy" />
        </FrameLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>