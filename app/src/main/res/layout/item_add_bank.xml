<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gap_48"
    android:orientation="horizontal"
    android:id="@+id/linear_add_bank"
    android:layout_marginRight="@dimen/gap_10"
    android:layout_marginLeft="@dimen/gap_10"
    android:layout_marginTop="@dimen/gap_10">

    <ImageView
        android:layout_width="@dimen/gap_35"
        android:layout_height="@dimen/gap_48"
        android:src="@mipmap/icon_addbank"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addBank"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_16"
        android:paddingLeft="@dimen/gap_10"
        android:textColor="@color/cardview_dark_background"/>

</LinearLayout>
